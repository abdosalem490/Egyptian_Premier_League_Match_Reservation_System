<% layout('layouts/boilerplate') -%>

<link rel="stylesheet" href="/stylesheets/register.css" />

<main>
  <!-- First tab -->
  <section class="tab">
    <div class="container">
      <div class="row align-items-center vh-100">
        <div class="col-4 mx-auto">
          <div class="card">
            <div class="card-body">
              <div class="position-relative m-4 list">
                <div class="progress" role="progressbar" aria-label="Progress" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="height: 1px;">
                  <div class="progress-bar" style="width: 0%"></div>
                </div>
                <button type="button" class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-primary rounded-pill" style="width: 2rem; height:2rem;">1</button>
                <button type="button" class="position-absolute top-0 start-50 translate-middle btn btn-sm btn-secondary rounded-pill" style="width: 2rem; height:2rem;">2</button>
                <button type="button" class="position-absolute top-0 start-100 translate-middle btn btn-sm btn-secondary rounded-pill" style="width: 2rem; height:2rem;">3</button>
              </div>
              <form
                class="needs-validation"
                novalidate
                onsubmit="return false;"
              >
                <h5 class="card-title text-center">Sign up</h5>
                <label for="email" class="form-label">Email</label>
                <div class="input-group mb-3">
                  <input
                    type="text"
                    id="email"
                    class="form-control"
                    placeholder="email"
                    aria-describedby="basic-addon2"
                    required
                  />
                  <span class="input-group-text" id="basic-addon2"
                    >@gmail.com</span
                  >
                  <div class="valid-feedback">Looks good!</div>
                </div>

                <label for="username" class="form-label">Username</label>
                <div class="input-group mb-3">
                  <span class="input-group-text" id="basic-addon1">@</span>
                  <input
                    id="username"
                    type="text"
                    class="form-control"
                    placeholder="Username"
                    required
                    aria-describedby="basic-addon1"
                  />
                  <div class="valid-feedback">Looks good!</div>
                </div>

                <label for="inputPassword5" class="form-label">Password</label>
                <input
                  type="password"
                  id="inputPassword5"
                  class="form-control"
                  aria-describedby="passwordHelpBlock"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
                <div id="passwordHelpBlock" class="form-text mb-3">
                  Your password must be 8-20 characters long, contain letters
                  and numbers, and must not contain spaces, special characters,
                  or emoji.
                </div>

                <button
                  onclick="next()"
                  class="btn btn-info"
                  style="width: 100%"
                  type="submit"
                >
                  Next
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Second tab -->
  <section class="tab">
    <div class="container">
      <div class="row align-items-center vh-100">
        <div class="col-4 mx-auto">
          <div class="card">
            <div class="card-body">
              <div class="position-relative m-4 list">
                <div class="progress" role="progressbar" aria-label="Progress" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="height: 1px;">
                  <div class="progress-bar" style="width: 0%"></div>
                </div>
                <button type="button" class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-primary rounded-pill" style="width: 2rem; height:2rem;">1</button>
                <button type="button" class="position-absolute top-0 start-50 translate-middle btn btn-sm btn-secondary rounded-pill" style="width: 2rem; height:2rem;">2</button>
                <button type="button" class="position-absolute top-0 start-100 translate-middle btn btn-sm btn-secondary rounded-pill" style="width: 2rem; height:2rem;">3</button>
              </div>
              <form
                class="needs-validation"
                novalidate
                onsubmit="return false;"
              >
                <h5 class="card-title text-center">Sign up</h5>
                <div class="input-group mb-3">
                  <span class="input-group-text">First Name</span>
                  <input
                    type="text"
                    aria-label="First name"
                    class="form-control"
                    id="firstname"
                    required
                  />
                  <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="input-group mb-3">
                  <span class="input-group-text">Last Name</span>
                  <input
                    type="text"
                    aria-label="Last name"
                    class="form-control"
                    id="lastname"
                    required
                  />
                  <div class="valid-feedback">Looks good!</div>
                </div>

                <label for="date">BirthDate</label>
                <div class="input-group mb-3">
                  <input
                    type="date"
                    name="date"
                    id="date"
                    required
                    class="form-control"
                  />
                </div>
                <div class="valid-feedback">Looks good!</div>

                <label for="gender">Gender</label>
                <select id="gender" class="form-select mb-3" required>
                  <% for( let gender of genders) { %>
                  <option value="<%= gender %>"><%= gender %></option>
                  <% } %>
                </select>

                <button
                  onclick="prev()"
                  class="btn btn-danger mb-2"
                  style="width: 100%"
                >
                  Previous
                </button>

                <button
                  onclick="next()"
                  class="btn btn-info"
                  style="width: 100%"
                >
                  Next
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Third tab -->
  <section class="tab">
    <div class="container">
      <div class="row align-items-center vh-100">
        <div class="col-4 mx-auto">
          <div class="card">
            <div class="card-body">
              <div class="position-relative m-4 list">
                <div class="progress" role="progressbar" aria-label="Progress" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="height: 1px;">
                  <div class="progress-bar" style="width: 0%"></div>
                </div>
                <button type="button" class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-primary rounded-pill" style="width: 2rem; height:2rem;">1</button>
                <button type="button" class="position-absolute top-0 start-50 translate-middle btn btn-sm btn-secondary rounded-pill" style="width: 2rem; height:2rem;">2</button>
                <button type="button" class="position-absolute top-0 start-100 translate-middle btn btn-sm btn-secondary rounded-pill" style="width: 2rem; height:2rem;">3</button>
              </div>
              <form
                class="needs-validation"
                novalidate
                onsubmit="return false;"
              >
                <h5 class="card-title text-center">Sign up</h5>
                <div class="form-floating mb-3">
                  <input
                    type="text"
                    class="form-control"
                    id="floatingCity"
                    placeholder="City"
                    required
                  />
                  <div class="valid-feedback">Looks good!</div>
                  <label for="floatingCity">City</label>
                </div>

                <div class="form-floating mb-3">
                  <textarea
                    class="form-control"
                    placeholder="Address"
                    id="floatingAdress"
                    style="height: 100px"
                  ></textarea>
                  <label for="floatingAdress">Address</label>
                </div>

                <label for="role" class="form-label">Role</label>
                <select class="form-select form-select-lg" id="role">
                  <% for(let role of roles) { %> <% const isSelected = role ===
                  'fan' ? 'selected' : null %>
                  <option value="<%= role %>" <%="isSelected" %>
                    ><%=role %>
                  </option>
                  <% } %>
                </select>
                <div class="valid-feedback">Looks good!</div>

                <button
                  onclick="prev()"
                  class="btn btn-danger mb-2 mt-3"
                  style="width: 100%"
                >
                  Previous
                </button>
                <button
                  onclick="submitForm()"
                  class="btn btn-success"
                  style="width: 100%"
                >
                  Submit
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<script src="/javascripts/register.js"></script>
